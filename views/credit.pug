form(action='/credit' method ='POST' name='creditform')
  .title
    h4 Credit Sales Records
    p &quot;Please fill in the correct Credit sales Records&quot;
  // bootstrap grid
  .center
    // row1
    .row.sellRow
      .col-md-6.col-12.col1
        .inputbox
          input(type='text' name='nameofProduce' required='required' onblur='valproducename(this, info1)')
          span Name of Produce
        span#info1
      .col-md-6.col-12.col1
        .inputbox
          select(name='typeofproduce' onblur='valproduceType(this, info2)')
            option(value='Select') Select type of produce
            option(value='cereal') Cereal
            option(value='legumes') Legumes
            option(value='others') Others
      span#info2
    // row 2
    .row.sellRow
      .col-md-6.col-12.col1
        .inputbox
          input(type='number' name='weight' required='required' onblur='valweight(this, info3)')
          span Tonnage (Kgs)
        span#info3
      .col-md-6.col-12.col1
        p.date Date of Dispatch
        .col-md-6.col-12.col1
          .inputbox
            input(type='date' name='date' required='required')
            // <span>Date</span>
    // row 3
    #specialrow.row.sellRow
      p.date Due date
      .col-md-6.col-12.col1
        .inputbox
          input(type='date' name='date' required='required')
          // <span>Date</span>
      .col-md-6.col-12.col1
        .inputbox
          input(type='number' name='amount' required='required' onblur='valAmount(this, info4)')
          span Amount Due
        span#info4
    // row 4
    #specialrow.row.sellRow
      .col-md-6.col-12.col1
        .inputbox
          input(type='alpa-numeric' name='nameofBuyer' required='required' onblur='valnameofBuyer(this, info5)')
          span Name of Buyer
        span#info5
      .col-md-6.col-12.col1
        .inputbox
          input(type='alpha-numeric' name='nin' required='required' onblur='valNIN(this, info6)')
          span NIN
        span#info6
    // row 5
    #specialrow.row.sellRow
      .col-md-6.col-12.col1
        .inputbox
          input(type='alpha-numeric' name='location' required='required' onblur='valLocation(this, info7)')
          span Location
        span#info7
      .col-md-6.col-12.col1
        .inputbox
          input(type='number' name='contact' required='required' onblur='valcontact(this, info8)')
          span Buyer&apos;s Contact
        span#info8
    // row 4
    #specialrow.row.sellRow
      .col-md-6.col-12.col1
        .inputbox
          input(type='text' name='agent' required='required' onblur='valAgent(this,info9)')
          span Sales Agent Name
        span#info9
      .col-md-6.col-12.col1
        .inputbox
          button.loginbutton Submit
