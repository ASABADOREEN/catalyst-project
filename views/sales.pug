form(action='/sales' method ='POST' name='salesform')
  .title
    h4 Sales Records
    p &quot;Please fill in the correct sales Records&quot;
  // bootstrap grid
  .center
    // row1
    .row.sellRow
      .col-md-6.col-12.col1
        .inputbox
          input(type='text' name='nameofProduce' required='required' onblur='valnameofProduce(this, info1)')
          span Name of Produce
        span#info1
      .col-md-6.col-12.col1
        .inputbox
          input(type='number' name='tonnage' required='required' onblur='valTonnage(this, info2)')
          span Tonnage (Kgs)
        span#info2
    // row 2
    .row.sellRow
      .col-md-6.col-12.col1
        .inputbox
          input(type='number' name='amount' required='required' onblur='valamount(this,info3)')
          span Amount Paid
        span#info3
      .col-md-6.col-12.col1
        .inputbox
          input(type='text' name='nameofBuyer' required='required' onblur='valbuyername(this,info4)')
          span Name of buyer
        span#info4
    // row 3
    #specialrow.row.sellRow
      p.date Date of transaction
      .col-md-6.col-12.col1
        .inputbox
          input(type='date' name='date' required='required')
          // <span>Date</span>
      .col-md-6.col-12.col1
        .inputbox
          input(type='text' name='agent' required='required' onblur='valAgent(this,info5)')
          span Sales Agent Name
        span#info5
    .inputbox
      button.loginbutton Submit
