form(action='/procurement' method='POST' name='procurementform')
  .title
    h4 Produce Procurement Records
    p &quot;Please fill in the correct produce procurement Records&quot;
  // bootstrap grid
  .center
    // row1
    .row.sellRow
      .col-md-6.col-12.col1
        .inputbox
          input(type='text' name='produce' onblur='valProduce(this, info1)' required='')
          span Name of Produce
        span#info1
      .col-md-6.col-12.col1
        .inputbox
          select(name='typeofproduce' onblur='valtypeofProduce(this, info2)')
            option(value='Select')  Type of produce
            option(value='cereal') Cereal
            option(value='legumes') Legumes
            option(value='others') Others
        span#info2
    // row 2
    #specialrow.row.sellRow
      p.date Date of Produce
      .col-md-6.col-12.col1
        .inputbox
          input(type='date' name='dateofProduce' required='required')
          // <span>Date</span>
      .col-md-6.col-12.col1
        .inputbox
          input(type='number' name='weight' onblur='valWeight(this, info3)')
          span Tonnage (Kgs)
        span#info3
    // row 3
    #specialrow.row.sellRow
      p.date Cost (Ugx)
      .col-md-6.col-12.col1
        .inputbox
          input(type='number' name='cost' required='required' onblur='valCost(this, info4)')
          // <span>Date</span>
        span#info4
      .col-md-6.col-12.col1
        .inputbox
          input(type='text' name='nameofDealer' required='required' onblur='valnameofDealer(this, info5)')
          span Name of Dealer
        span#info5
    // row 4
    #specialrow.row.sellRow
      p.date Contact
      .col-md-6.col-12.col1
        .inputbox
          input(type='number' name='contact' required='required' onblur='valContact(this, info6)')
        span#info6
      .col-md-6.col-12.col1
        .inputbox
          input(type='number' name='Price' required='required' onblur='valPrice(this, info7)')
          span Selling Price
        span#info7
    // -row 5
    .inputbox
      select(name='branch' onblur='valBranch(this, info8)')
        option(value='Default') Select Branch
        option(value='attendant') Maganjo
        option(value='attendant') Matuga
    .col-md-6.col-12.col1
      .inputbox
        button.loginbutton Submit
